<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#f1f2f3"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#FFF"
        android:orientation="horizontal">
        <Button
            android:id="@+id/login_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#00000000"
            android:drawableLeft="@mipmap/back"
            android:paddingLeft="5dp"
            android:text="短信验证登录" />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

        </LinearLayout>

        <Button
            android:id="@+id/reg_btn"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="#00000000"
            android:text="注册"
            android:textColor="@color/indexTextColors"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/sj"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:background="#FFF"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="40dp">
            <EditText
                android:id="@+id/phone"
                android:hint="请输入手机号"
                android:drawableLeft="@mipmap/phone"
                android:inputType="phone"
                android:background="@null"
                android:paddingLeft="10dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp" />
            <Button
                android:id="@+id/get_sms_btn"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:background="#00000000"
                android:textColor="#717171"
                android:textSize="16sp"
                android:text="获取验证码"/>
        </LinearLayout>
        <EditText
            android:id="@+id/yzm"
            android:drawableLeft="@mipmap/yzm"
            android:background="@null"
            android:paddingLeft="10dp"
            android:hint="请输入短信中的验证码"
            android:layout_width="match_parent"
            android:layout_height="40dp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/zh"
        android:visibility="gone"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:background="#FFF"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="40dp">
            <EditText
                android:id="@+id/username"
                android:hint="请输入账号"
                android:drawableLeft="@mipmap/phone"
                android:inputType="phone"
                android:background="@null"
                android:paddingLeft="10dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp" />

        </LinearLayout>
        <EditText
            android:id="@+id/password"
            android:drawableLeft="@mipmap/yzm"
            android:background="@null"
            android:paddingLeft="10dp"
            android:hint="请输入密码"
            android:layout_width="match_parent"
            android:layout_height="40dp" />
    </LinearLayout>
    <Button
        android:id="@+id/login_btn"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="45dp"
        android:text="登录"
        android:textColor="#FFF"
        android:background="@drawable/button_login"
        />
    <TextView
        android:id="@+id/login_zh"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:gravity="right"
        android:layout_marginTop="10dp"
        android:paddingRight="10dp"
        android:text="账号密码登录"/>

    <LinearLayout
        android:gravity="bottom"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="20dp"
            android:textSize="12sp"
            android:text="第三方登录"/>
        <LinearLayout
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:drawableTop="@mipmap/weixin"
                android:textColor="#929292"
                android:textSize="12sp"
                android:text="微信登录"/>
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:drawableTop="@mipmap/qq"
                android:textColor="#929292"
                android:textSize="12sp"
                android:text="QQ登录"/>
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:drawableTop="@mipmap/weibo"
                android:textColor="#929292"
                android:textSize="12sp"
                android:text="新浪微博"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
