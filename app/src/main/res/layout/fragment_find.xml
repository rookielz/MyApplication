<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#f1f2f3"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="rookiez.top.Fragment.IndexFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/indexTextColors">
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textColor="#FFF"
           android:textSize="16sp"
           android:text="附近"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/loading_max"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_weight="1">
        <ImageView
            android:id="@+id/lo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/loading"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/find_title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:visibility="gone"
        android:background="#FFF">
        <Button
            android:id="@+id/type"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="#00000000"
            android:paddingRight="10dp"
            android:drawableRight="@mipmap/filter_choose_arrow_down"
            android:text="全部分类"
            android:textColor="#515151"/>
        <Button
            android:id="@+id/juli"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:background="#00000000"
            android:drawableRight="@mipmap/filter_choose_arrow_down"
            android:textColor="#515151"
            android:text="3km"/>
        <Button
            android:id="@+id/zhb"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:background="#00000000"
            android:drawableRight="@mipmap/filter_choose_arrow_down"
            android:textColor="#515151"
            android:text="综合榜"/>
        <Button
            android:id="@+id/sx"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:background="#00000000"
            android:drawableRight="@mipmap/filter_choose_arrow_down"
            android:textColor="#515151"
            android:text="筛选"/>
    </LinearLayout>
    <TextView
        android:visibility="gone"
        android:id="@+id/address"
        android:paddingLeft="10dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:text="当前位置"/>
    <ScrollView
        android:id="@+id/find_content"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <ListView
                android:id="@+id/find_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </ListView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
